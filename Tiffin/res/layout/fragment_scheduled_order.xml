<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearlayout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/wallet" />

                <TextView
                    android:id="@+id/scheduled_order_textview_Wallet"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:inputType="number"
                    android:text="1000"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/scheduled_order_editText_TiffinName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/battery"
                android:drawablePadding="10dp"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:inputType="text"
                android:padding="10dp"
                android:text="MY Tiffin"
                android:textColor="#9E9E9E" >
            </EditText>

            <EditText
                android:id="@+id/scheduled_order_editText_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/network"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:inputType="text"
                android:padding="10dp"
                android:text="ABC ABC"
                android:textColor="#9E9E9E" >
            </EditText>

            <EditText
                android:id="@+id/scheduled_order_editText_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/black"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:text="abc@gmail.com"
                android:textColor="#9E9E9E" />

            <EditText
                android:id="@+id/scheduled_order_editText_Phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/telephone"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:inputType="phone"
                android:padding="10dp"
                android:text="1234567890"
                android:textColor="#9E9E9E" />

            <EditText
                android:id="@+id/scheduled_order_editText_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/rupee"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:padding="10dp"
                android:text="120"
                android:textColor="#9E9E9E" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_main"
            android:layout_marginTop="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/scheduled_order_textview_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20sp"
                android:ems="10"
                android:text=" Type Of Meal "
                android:textColor="#000"
                android:textSize="15sp" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/linearlayout_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_address"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/scheduled_order_radioButton_lunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:text="Lunch"
                        android:visibility="gone" />

                    <RadioButton
                        android:id="@+id/scheduled_order_radioButton_dinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Dinner"
                        android:visibility="gone" />

                    <RadioButton
                        android:id="@+id/scheduled_order_radioButton_both"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="Both(Lunch-Dinner)"
                        android:visibility="gone" />
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/scheduled_order_editText_LunchAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:drawablePadding="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Lunch Address"
                android:padding="10dp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/scheduled_order_checkBox_sameasabove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Same As Above"
                android:visibility="gone" />

            <EditText
                android:id="@+id/scheduled_order_editText_DinnerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:drawablePadding="10dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Dinner Address"
                android:padding="10dp"
                android:visibility="gone" >
            </EditText>

            <Button
                android:id="@+id/scheduled_order_proceed_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/orderbutton"
                android:text="Proceed to Pay"
                android:textColor="#FFF" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>