<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fee782"
    tools:context=".SelectType" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#DCE775"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/select_type_scheduled_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/monthly" />

            <TextView
                android:id="@+id/select_type_scheduled_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/scheduled"
                android:textColor="#000"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#CDDC39"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/select_type_quick_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/alarm" />

            <TextView
                android:id="@+id/select_type_quick_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:gravity="center"
               	android:layout_gravity="center"
                android:text="@string/quick"
                
                android:textColor="#000" 
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:typeface="serif" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>